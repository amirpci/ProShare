<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_tab_wkr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/tab_profile_wkr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_profile_garis_wkr"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/tab_dipencet"/>
            <ImageView
                android:id="@+id/tab_profile_ikon_wkr"
                android:layout_above="@id/tab_profile_garis_wkr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_orang" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_tanya_wkr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_tanya_garis_wkr"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/tab_dipencet"/>
            <ImageView
                android:id="@+id/tab_tanya_ikon_wkr"
                android:layout_above="@id/tab_tanya_garis_wkr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_tanya"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_feedback_wkr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_feedback_garis_Exprt"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/tab_dipencet"/>
            <ImageView
                android:id="@+id/tab_feedback_ikon_Exprt"
                android:layout_above="@id/tab_feedback_garis_Exprt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tab_chat"/>
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/layout_wadah_fragment_wkr"
        android:layout_above="@id/layout_tab_wkr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
