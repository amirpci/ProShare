<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modul.Worker.TambahPertanyaanWkr"
    android:background="@color/abu">

    <RelativeLayout
        android:id="@+id/tambah_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tambah_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="VERIFY"
            android:textColor="@color/biruLaut"
            android:background="@drawable/latar_bingkai_kotak"/>
        <EditText
            android:id="@+id/tambah_judul"
            android:layout_below="@id/tambah_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="22sp"
            android:textColor="#000000"
            android:hint="Your Title Goes Here"
            android:textColorHint="#A3A3A3"
            android:background="#00000000"
            android:layout_weight="9"
            android:inputType="none"/>
        <ImageView
            android:id="@+id/tambah_ok"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_kirim"
            android:tint="@color/biruLaut"
            android:layout_weight="1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tambah_properti_wadah"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">
        <LinearLayout
            android:id="@+id/tambah_properti_icon"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <ImageView
                android:id="@+id/tambah_gambar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tab_tambah_gambar"
                android:tint="@color/abuLebihTua"/>
            <ImageView
                android:id="@+id/tambah_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tab_tambah_video"
                android:tint="@color/abuLebihTua"/>
            <ImageView
                android:id="@+id/tambah_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/tab_tambah_link"
                android:tint="@color/abuLebihTua"/>
        </LinearLayout>
        <GridView
            android:id="@+id/tambah_properti_cell_wadah"
            android:layout_below="@id/tambah_properti_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/tambah_properti_cell_dipilih"
        android:layout_below="@id/tambah_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"/>
    <EditText
        android:id="@+id/tambah_deskripsi"
        android:layout_below="@id/tambah_properti_cell_dipilih"
        android:layout_above="@id/tambah_properti_wadah"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:textColor="#000000"
        android:hint="You insert description here about your problem."
        android:textColorHint="#A3A3A3"
        android:gravity="start"
        android:background="#00000000"/>

</RelativeLayout>