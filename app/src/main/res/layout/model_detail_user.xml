<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_latar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:layout_centerInParent="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/latar_kotak_tumpul"
        android:backgroundTint="#FFFFFF"
        android:layout_centerInParent="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profil"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:padding="22dp"
            android:tint="#FFFFFF"
            android:src="@drawable/tab_orang"
            android:background="@drawable/latar_lingkaran"
            android:backgroundTint="@color/abuLebihTua"/>

        <TextView
            android:id="@+id/user_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama User"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/user_status"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bidang User"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/user_aksi_wadah"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_aksi_chat"
                android:paddingLeft="52dp"
                android:paddingRight="52dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/obj_chat"
                android:tint="@color/abuLebihTua"
                android:background="@drawable/trans_ditekan"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/user_aksi_lihat"
                android:paddingLeft="54dp"
                android:paddingRight="54dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tab_orang"
                android:tint="@color/abuLebihTua"
                android:background="@drawable/trans_ditekan"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>