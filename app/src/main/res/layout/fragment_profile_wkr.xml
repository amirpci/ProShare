<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">
        <LinearLayout
            android:id="@+id/profil_idenstitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/abuTua">
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/abu"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_profile"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            />
                        <ImageView
                            android:id="@+id/pp_preview"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:tint="@color/abuTua"
                            android:src="@drawable/obj_profilephoto"/>
                        <ImageView
                            android:clickable="true"
                            android:id="@+id/addphoto_profile"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:padding="10dp"
                            android:src="@drawable/tab_tambah_gambar"
                            android:background="@drawable/latar_lingkaran"
                            android:backgroundTint="@color/abuSangatTua"
                            android:tint="#FFFFFF"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <sidev17.siits.proshare.Utils.View.MenuBarView
                        android:id="@+id/opsi_profil"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/obj_titik_tiga_horizontal"
                        android:background="@drawable/latar_kotak_tumpul_bawah"
                        app:latarInduk_AWAL="@drawable/latar_kotak_tumpul_bawah"
                        app:BAR_latarInduk="@drawable/latar_kotak_tumpul_bawah"
                        app:warna_latar="@color/abuTua"
                        app:warna_kuat="@color/biruLaut"
                        app:warna_induk="#FFFFFF"
                        app:warna_tersedia="#FFFFFF"
                        android:tint="#FFFFFF"
                        android:backgroundTint="@color/abuTua"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/nama_profile"
                        android:text="Nama Anda"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/hitam"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"/>
                    <ImageView
                        android:id="@+id/prfile_edit_nama"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/nama_profile"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:clickable="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/obj_pensil"
                        android:tint="@color/abuLebihTua"/>
                </RelativeLayout>
                <Spinner
                    android:id="@+id/bidang_profile"
                    android:text="Bidang Anda"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5sp"/>
                <TextView
                    android:id="@+id/status_profile"
                    android:text="Status Anda"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/profil_status"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="@color/abu">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_profile_0"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="You answered"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hitam"/>
                    <TextView
                        android:id="@+id/answered_profile"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textSize="20dp"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_profile_2"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="questions"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/abuLebihTua"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_profile_1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="Your rating"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hitam"/>
                    <TextView
                        android:id="@+id/rating_profile"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textSize="20dp"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_margin="2dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/tab_orang"/>
                        <TextView
                            android:id="@+id/rater_profile"
                            android:layout_margin="2dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="123"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/abuLebihTua"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/profil_skill"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@color/abu">
                <TextView
                    android:id="@+id/txt_profile_3"
                    android:layout_marginBottom="10dp"
                    android:text="Your skill and recomendations"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hitam"/>
                <ListView
                    android:id="@+id/skill_daftar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
