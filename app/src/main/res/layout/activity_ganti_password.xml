<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/latar_kotak_tumpul"
        android:backgroundTint="#FFFFFF">
        <RelativeLayout
            android:id="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp">
            <RelativeLayout
                android:id="@+id/icon_gmb"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/app_logo_satuan_p"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/app_logo_satuan_titik"
                    android:tint="@color/biruLaut"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/icon_tulisan"
                android:layout_toRightOf="@id/icon_gmb"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="assword"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pass"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/pass_lama"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/pass_lama_isi"
                    android:layout_alignParentRight="true"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/pass_lama_teks"
                    android:layout_toLeftOf="@id/pass_lama_isi"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Password Lama"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pass_baru"
                android:layout_marginTop="5dp"
                android:layout_below="@id/pass_lama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/pass_baru_isi"
                    android:layout_alignParentRight="true"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/pass_baru_teks"
                    android:layout_toLeftOf="@id/pass_baru_isi"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Password Baru"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pass_konfirm"
                android:layout_marginTop="5dp"
                android:layout_below="@id/pass_baru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/pass_konfirm_isi"
                    android:layout_alignParentRight="true"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/pass_konfirm_teks"
                    android:layout_toLeftOf="@id/pass_konfirm_isi"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Konfirmasi"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/ganti"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:text="Ganti"
            android:textStyle="bold"
            android:textColor="@color/primary_white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textAllCaps="false"/>
    </RelativeLayout>

</RelativeLayout>