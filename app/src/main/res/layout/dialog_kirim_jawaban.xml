<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/tindakan_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="Apakah anda ingin mengirim jawaban ini?"
        android:textSize="17sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tindakan_lempar"
            android:layout_below="@id/tindakan_konfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:text="Lempar"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="#AA000098"/>
        <TextView
            android:id="@+id/tindakan_kirim"
            android:layout_below="@id/tindakan_konfirmasi"
            android:layout_toRightOf="@id/tindakan_lempar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:text="Kirim"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="#AA009800"/>
    </LinearLayout>

</RelativeLayout>