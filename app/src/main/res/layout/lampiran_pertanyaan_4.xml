<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="180dp">
    <ImageView
        android:id="@+id/lampiran_pertanyaan_1"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="3dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/lampiran_pertanyaan_2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="3dp"
            />
        <RelativeLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/lampiran_pertanyaan_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_rectangle_transparent"/>
                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/lampiran_count_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="40sp"
                        android:alpha="0.8"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_marginTop="14sp"
                        android:layout_marginBottom="7sp"
                        android:layout_width="30sp"
                        android:layout_height="match_parent"
                        android:src="@drawable/shape_plus"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>