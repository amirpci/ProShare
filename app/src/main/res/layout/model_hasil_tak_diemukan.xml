<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_tambah_pertanyaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/tambah_pertanyaan"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/app_logo_tanya"
            android:background="@drawable/latar_kotak_tumpul"
            android:backgroundTint="@color/biruLaut"
            android:elevation="10dp"/>
        <TextView
            android:id="@+id/tambah_teks_1"
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Sorry, no one has the same problem"/>
        <TextView
            android:id="@+id/tambah_teks_2"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Ask now!"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

</RelativeLayout>