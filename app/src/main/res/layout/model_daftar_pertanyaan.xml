<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/daftar_pertanyaan_grafis"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/daftar_pertanyaan_gambar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:src="@drawable/obj_gambar_kotak"/>
        <ImageView
            android:id="@+id/daftar_pertanyaan_centang"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/daftar_pertanyaan_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Problem Text Goes Here"/>
        <TextView
            android:id="@+id/daftar_pertanyaan_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:text="Problem description goes here"/>
    </LinearLayout>

</LinearLayout>