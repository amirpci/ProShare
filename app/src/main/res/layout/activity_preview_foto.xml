<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <android.support.v4.view.ViewPager
        android:id="@+id/preview_foto_wadah"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/preview_header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#AAFFFFFF">
        <RelativeLayout
            android:id="@+id/cell_centang"
            android:padding="12dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/tambah_cell_centang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/latar_lingkaran"
                android:backgroundTint="#55000000"
                android:src="@drawable/latar_lingkaran_bolong"
                android:tint="#EEFFFFFF"/>
            <TextView
                android:id="@+id/tambah_cell_centang_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/latar_lingkaran"
                android:backgroundTint="#00000000"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/tambah_cell_centang_gambar"
                android:padding="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="#FFFFFF"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/preview_foto_judul"
            android:layout_toLeftOf="@id/cell_centang"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Judul"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/preview_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#AAFFFFFF">
