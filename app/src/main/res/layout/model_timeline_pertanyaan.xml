<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
<!--
        <GridView
            android:id="@+id/tl_gambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"/>
-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/tl_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

        <RelativeLayout
            android:id="@+id/tl_info_orang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/komentar_header"
            android:paddingTop="5dp">
            <RelativeLayout
                android:id="@+id/tl_orang_dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tl_orang_gambar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:tint="#FFFFFF"
                    android:src="@drawable/tab_orang"
                    android:background="@drawable/latar_lingkaran"
                    android:backgroundTint="@color/abuLebihTua"/>
                <ImageView
                    android:id="@+id/tl_orang_centang"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tl_nama_orang"
                android:layout_toRightOf="@id/tl_orang_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Mr. Your Name Here"/>
            <TextView
                android:id="@+id/tl_status_orang"
                android:layout_toRightOf="@id/tl_orang_dp"
                android:layout_below="@id/tl_nama_orang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:text="Your job here"/>
        </RelativeLayout>

        <!--
        <GridView
            android:id="@+id/tl_gambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"/>
        -->
        <LinearLayout
            android:background="@color/abuLebihTua"
            android:id="@+id/lampiran_pertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <TextView
            android:id="@+id/tl_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:text="When it happens, I don't know what to do. I need inspiration."
            android:textColor="@color/hitam"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/tl_link"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="URL : "/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tl_attribut_bawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
<!--
            <ImageView
                android:id="@+id/tl_like_gambar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tab_orang"
                android:tint="@color/abuSangatTua"/>

            <TextView
                android:id="@+id/tl_orang_angka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tl_like_gambar"
                android:text="123"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/tl_suka_gambar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/obj_tambah_lingkaran"
                android:tint="@color/blue" />
-->

            <TextView
                android:id="@+id/tl_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:textSize="10sp"
                android:textColor="@color/abuLebihTua"
                android:text="6 Jul 2018"/>
        <LinearLayout
            android:id="@+id/tl_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/tl_vote_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:rotation="180"
                android:src="@drawable/obj_segitiga"
                android:tint="@color/abuLebihTua"/>
            <TextView
                android:id="@+id/tl_vote_posisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@color/biruLaut"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/tl_vote_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:src="@drawable/obj_segitiga"
                android:tint="@color/abuLebihTua"/>
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>